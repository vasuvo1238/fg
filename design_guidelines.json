    "vibe": "The Glass Vault - High-Security Swiss Bank meets Cyberpunk Terminal"
  },
  "typography": {
    "headings": {
      "family": "Fraunces, 'Playfair Display', serif",
      "usage": "Headings (h1-h3), Hero Text",
      "weights": "Light (300) for elegance, Black (900) for impact",
      "tracking": "tight (-0.02em)"
    },
    "body": {
      "family": "Inter, system-ui, sans-serif",
      "usage": "Paragraphs, UI elements, Inputs",
      "weights": "Regular (400), Medium (500)"
    },
    "mono": {
      "family": "'JetBrains Mono', monospace",
      "usage": "Financial Data, Numbers, Code Blocks, Tickers",
      "weights": "Medium (500)"
    }
  },
  "colors": {
    "light_mode": {
      "background": "#FDFCF8",
      "foreground": "#1A1A1A",
      "primary": "#0F5132",
      "secondary": "#F4F4F5",
      "accent": "#D4AF37",
      "muted": "#737373",
      "border": "#E5E5E5"
    },
    "dark_mode": {
      "background": "#050505",
      "foreground": "#E5E5E5",
      "primary": "#10B981",
      "secondary": "#1F1F1F",
      "accent": "#F59E0B",
      "muted": "#A3A3A3",
      "border": "#262626"
    },
    "semantic": {
      "success": "#10B981",
      "warning": "#F59E0B",
