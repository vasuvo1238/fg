    "border_radius": {
      "default": "rounded-lg",
      "card": "rounded-xl",
      "button": "rounded-full"
    }
  },
  "components": {
    "chat_interface": {
      "style": "Stream of Cards",
      "user_message": {
        "align": "right",
        "bg": "bg-primary text-primary-foreground",
        "shape": "rounded-2xl rounded-tr-sm"
      },
      "bot_message": {
        "align": "left",
        "bg": "bg-secondary text-secondary-foreground",
        "shape": "rounded-2xl rounded-tl-sm",
        "features": "Structured Data, Charts, Markdown Support"
      },
      "input_area": {
        "style": "Floating Command Bar",
        "position": "fixed bottom-8 left-1/2 -translate-x-1/2 w-[90%] max-w-3xl",
        "visual": "Glassmorphism (backdrop-blur-xl), border-t border-white/20 shadow-2xl"
      }
    },
    "guardrails": {
      "visual": "Amber/Yellow Border + Warning Icon",
      "animation": "Shake on trigger",
      "text_style": "font-mono text-xs text-warning uppercase tracking-widest"
    },
    "buttons": {
      "primary": "bg-primary text-primary-foreground hover:opacity-90 shadow-lg hover:shadow-xl transition-all duration-300",
      "secondary": "bg-transparent border border-input hover:bg-accent hover:text-accent-foreground"
    }
  },
